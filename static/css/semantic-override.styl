@import './mixins'

a .ui.button, button.ui.button
  border-radius: 3px
  color: #1b2540
  font-family: 'Graphik', sans-serif
  font-weight: 300
  
  &.primary
    border: 2px solid #1b2540
    background-color: #1b2540
    box-shadow: 2px 2px 3px 0 rgba(18, 35, 48, .3)
    &:hover
      background-color: #34477c
      box-shadow: 2px 2px 3px 0 rgba(18, 35, 48, .3)
    &.disabled
      background-color: #0043BA
      box-shadow: 2px 2px 3px 0 rgba(18, 35, 48, .3)
    &:active
      background-color: #34477c
      box-shadow: 2px 2px 3px 0 rgba(18, 35, 48, .3)
  &.secondary
    border: 2px solid #19C6C6
    background-color: #fff
    box-shadow: 2px 2px 3px 0 rgba(18, 35, 48, .3)
    color: #1b2540 !important
    &:hover
      background-color: #19C6C6
      box-shadow: 2px 2px 3px 0 rgba(18, 35, 48, .3)
    &.disabled
      background-color: #fff
      box-shadow: 2px 2px 3px 0 rgba(18, 35, 48, .3)
    &:active
      background-color: #19C6C6
      box-shadow: 2px 2px 3px 0 rgba(18, 35, 48, .3)
  &.compact
    border: 2px solid #19C6C6
    background-color: #fff
    box-shadow: 2px 2px 3px 0 rgba(18, 35, 48, .3)
    color: #1b2540 !important
    &:hover
      background-color: #19C6C6
      box-shadow: 2px 2px 3px 0 rgba(18, 35, 48, .3)
    &.disabled
      background-color: #fff
      box-shadow: 2px 2px 3px 0 rgba(18, 35, 48, .3)
    &:active
      background-color: #19C6C6
      box-shadow: 2px 2px 3px 0 rgba(18, 35, 48, .3)
  &.basic
    background-color: #fff
    border: 2px solid #19C6C6
    box-shadow: 0 1px 3px 0 #D4D4D4
    color: #0043BA !important
    &:hover
      border: 1px solid #19C6C6
      background-color: rgba(0, 67, 186, .05)
      box-shadow: 0 1px 3px 0 #D4D4D4
      color: #0043BA
    &.disabled
      border: 1px solid #19C6C6
      box-shadow: 0 1px 3px 0 #D4D4D4
    &:active
      border: 1px solid #19C6C6
      background-color: rgba(0, 67, 186, .15)
      box-shadow: 0 1px 3px 0 #D4D4D4

.ui.selection.dropdown
  min-width: 50px

.ui.right.floated.button
  margin-left: 15px
    
.ui.bottom.attached.tab
  height: 100%

.ui.form
  .field > label
    text-align: left
    font-size: 12px
    color: #484848
    line-height: 15px

.ui.input
  height: 35px

table .ui.single.line.basic.table
  tbody > tr
    cursor: pointer
    &:hover
      background-color: #E3F6FF !important
      border: 2px solid #95D0FF !important

.header
  font-family: 'Graphik', sans-serif !important
  font-weight: 500

.text
  font-family: 'Graphik', sans-serif !important
