
// LAYOUT

clearfix()
  +ie(7, true)
    zoom: 1

  &:before
  &:after
    content: ""
    display: table
  &:after
    clear: both

overlay($top = 0, $right = 0, $bottom = 0, $left = 0)
  position: absolute
  top: $top
  right: $right
  left: $left
  bottom: $bottom

fixerlay($top = 0, $right = 0, $bottom = 0, $left = 0)
  position: fixed
  top: $top
  right: $right
  left: $left
  bottom: $bottom

// TEXT

serif()
  font-family: 'Crimson Text', sans-serif

monospace()
  font-family: "Courier New", Courier, monospace

ellipsis()
  text-overflow: ellipsis
  white-space: nowrap
  overflow: hidden

// BORDER

background-clip(argument)
  -moz-background-clip: argument
  -webkit-background-clip: argument
  background-clip: argument

border-radius(n)
  -webkit-border-radius: n
  -moz-border-radius: n
  border-radius: n

border-top-radius(n)
  -webkit-border-top-left-radius: n
  -moz-border-top-left-radius: n
  border-top-left-radius: n
  -webkit-border-top-right-radius: n
  -moz-border-top-right-radius: n
  border-top-right-radius: n

noselect()
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
